<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:background="#F6DCFF"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="ALZSupport"
                android:textColor="@color/black"
                android:textSize="30dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#F6DCFF"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5"></LinearLayout>
        <Button
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Add Reminder"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/myremind"
            android:textColor="#C934DD"
            android:background="@null">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center"
        android:layout_weight="2"
        android:background="#F6DCFF"
        android:orientation="vertical">

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:textColor="#C934DD"
                android:layout_marginRight="10dp"
                android:textSize="40dp"
                android:format24Hour ="HH:mm:ss"
                android:format12Hour ="hh:mm:ss"
                tools:targetApi="jelly_bean_mr1"></TextClock>

        <TextClock
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:format24Hour ="yyyy-MM-dd EEEE"
            android:format12Hour ="yyyy-MM-dd EEEE"
            android:textColor="#C934DD"
            tools:targetApi="jelly_bean_mr1"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center"
        android:layout_weight="2"
        android:background="#F6DCFF"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Scheduled"
            android:textSize="40dp"
            android:textColor="#C934DD">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All reminders will appear here"
            android:textSize="30dp"
            android:textColor="#C934DD"></TextView>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="10"
        android:background="#F6DCFF">


        <ListView
            android:id="@+id/list"
            android:divider="@null"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">

        </ListView>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/fab2"
            android:layout_height="wrap_content"
            android:text="Facilities"
            android:textSize="10dp"
            android:textColor="#fff"
            android:background="#C934DD"
            android:drawableTop="@drawable/facilities">

        </Button>
    </LinearLayout>
</LinearLayout>
